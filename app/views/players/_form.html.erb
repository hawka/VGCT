<% if @player.errors.any? %>
  <div class="alert alert-error">
    <strong><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</strong>

    <ul>
    <% @player.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="clearfix">
   <%= f.label :username, t("activerecord.attributes.player.username", :default => "Username"), :class => :label %>
  <div class="input">
    <%= f.text_field :username, :class => 'text_field' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :truename, t("activerecord.attributes.player.truename", :default => "Truename"), :class => :label %>
  <div class="input">
    <%= f.text_field :truename, :class => 'text_field' %>
  </div>
</div>

<div class="form-actions">
  <button class="btn primary" type="submit">Save</button> or
	<%= link_to "Cancel", players_path %>
</div>
